<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout_artist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_height="100dp">

    <ImageView
        android:layout_width="@dimen/artist_image_width"
        android:layout_height="@dimen/artist_image_height"
        android:id="@+id/imageview_artist_image"
        android:layout_margin="8dp"
        android:layout_gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxWidth="@dimen/artist_image_width"
        tools:src="@drawable/noimage"
        android:contentDescription="@string/imageview_artist_description" />

    <TextView
        android:id="@+id/textview_artist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@android:color/darker_gray"
        android:layout_toEndOf="@id/imageview_artist_image"
        android:layout_toRightOf="@id/imageview_artist_image"
        android:layout_centerVertical="true"
        tools:text="Nine Inch Nails" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/itemBorderColor"
        android:layout_below="@id/imageview_artist_image"/>

</RelativeLayout>